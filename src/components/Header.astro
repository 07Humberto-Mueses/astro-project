---
import "../styles/global.css";
import iconoInicio from "../assets/home.svg?url";
import iconoAcercaDe from "../assets/about.svg?url";
import iconoContacto from "../assets/contact.svg?url";
---

<header class="bg-[#34495e] text-white py-6 shadow-md">
  <div class="container mx-auto flex justify-between items-center">
    <h1 class="text-3xl font-bold">Blog de Rese√±as de Series</h1>
    <nav>
      <ul class="flex space-x-8">
        <li>
          <a
            href="/"
            class="flex flex-col items-center transition-all hover:text-[#1abc9c]"
          >
            <img
              src={iconoInicio}
              alt="Inicio"
              width="40"
              height="40"
              class="mb-1"
            />
            Inicio
          </a>
        </li>
        <li>
          <a
            href="/about"
            class="flex flex-col items-center transition-all hover:text-[#1abc9c]"
          >
            <img
              src={iconoAcercaDe}
              alt="Acerca de"
              width="40"
              height="40"
              class="mb-1"
            />
            Acerca de
          </a>
        </li>
        <li>
          <a
            href="#"
            class="flex flex-col items-center transition-all hover:text-[#1abc9c]"
          >
            <img
              src={iconoContacto}
              alt="Contacto"
              width="40"
              height="40"
              class="mb-1"
            />
            Contacto
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>
